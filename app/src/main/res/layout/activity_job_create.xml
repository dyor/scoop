<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoopCreate">

  <Button
      android:id="@+id/btnJobCreateSave"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="31dp"
      android:layout_marginStart="28dp"
      android:text="Save"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent" />
  <EditText
      android:id="@+id/edit_job_description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:ems="10"
      android:gravity="start|top"
      android:inputType="textMultiLine"
      android:tooltipText="yea boy"
      app:layout_constraintBaseline_toBaselineOf="@+id/txt_job_description"
      app:layout_constraintStart_toEndOf="@+id/txt_job_description" />
  <EditText
      android:id="@+id/edit_job_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="17dp"

      android:ems="10"
      android:inputType="text"
      app:layout_constraintBaseline_toBaselineOf="@+id/txt_job_name"
      app:layout_constraintStart_toEndOf="@+id/txt_job_name" />
  <EditText
      android:id="@+id/edit_start_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="5dp"
      android:ems="10"
      android:inputType="time"
      app:layout_constraintEnd_toEndOf="@+id/edit_job_description"
      app:layout_constraintTop_toBottomOf="@+id/edit_job_description" />
  <EditText
      android:id="@+id/edit_start_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="15dp"
      android:layout_marginEnd="1dp"
      android:ems="10"
      android:inputType="date"
      app:layout_constraintBottom_toTopOf="@+id/edit_duration"
      app:layout_constraintEnd_toEndOf="@+id/edit_duration" />


  <EditText
      android:id="@+id/edit_location"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="4dp"
      android:layout_marginEnd="2dp"
      android:ems="10"
      android:inputType="textPostalAddress"
      app:layout_constraintBottom_toTopOf="@+id/edit_hourly_rate"
      app:layout_constraintEnd_toEndOf="@+id/edit_hourly_rate" />
  <EditText
      android:id="@+id/edit_hourly_rate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="67dp"
      android:layout_marginStart="31dp"
      android:ems="10"
      android:inputType="numberDecimal"
      app:layout_constraintStart_toEndOf="@+id/textView3"
      app:layout_constraintTop_toBottomOf="@+id/edit_duration" />
  <EditText
      android:id="@+id/edit_duration"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:layout_marginStart="3dp"
      android:ems="10"
      android:inputType="numberDecimal"
      app:layout_constraintStart_toStartOf="@+id/edit_location"
      app:layout_constraintTop_toBottomOf="@+id/txt_start_time" />
  <TextView
      android:id="@+id/txt_start_time2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="212dp"
      android:layout_marginStart="36dp"
      android:text="Start Time"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
  <TextView
      android:id="@+id/txt_start_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="284dp"
      android:layout_marginStart="36dp"
      android:text="Start Date"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
  <TextView
      android:id="@+id/txt_job_description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="160dp"
      android:layout_marginStart="38dp"
      android:text="Description"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
  <TextView
      android:id="@+id/txt_job_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="45dp"
      android:layout_marginStart="29dp"
      android:text="Job Name"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
  <TextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="37dp"
      android:layout_marginStart="30dp"
      android:text="Duration"
      app:layout_constraintBottom_toTopOf="@+id/textView2"
      app:layout_constraintStart_toStartOf="parent" />
  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="30dp"
      android:text="Location"
      app:layout_constraintBaseline_toBaselineOf="@+id/edit_location"
      app:layout_constraintStart_toStartOf="parent" />
  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="25dp"
      android:text="Hourly Rate"
      app:layout_constraintBottom_toBottomOf="@+id/edit_hourly_rate"
      app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>