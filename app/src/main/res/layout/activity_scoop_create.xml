<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoopCreate">

  <Button
      android:id="@+id/btnJobCreateSave"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="28dp"
      android:layout_marginStart="38dp"
      android:text="Save"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edit_job_description" />
  <EditText
      android:id="@+id/edit_job_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="17dp"

      android:ems="10"
      android:inputType="text"
      app:layout_constraintBaseline_toBaselineOf="@+id/txt_job_name"
      app:layout_constraintStart_toEndOf="@+id/txt_job_name" />
  <EditText
      android:id="@+id/edit_job_description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="17dp"
      android:ems="10"
      android:gravity="start|top"
      android:inputType="textMultiLine"
      android:tooltipText="yea boy"
      app:layout_constraintBaseline_toBaselineOf="@+id/txt_job_description"
      app:layout_constraintStart_toEndOf="@+id/txt_job_description" />


  <TextView
      android:id="@+id/txt_job_description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="160dp"
      android:layout_marginStart="38dp"
      android:text="Description"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
  <TextView
      android:id="@+id/txt_job_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="45dp"
      android:layout_marginStart="29dp"
      android:text="Scoop Name"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>